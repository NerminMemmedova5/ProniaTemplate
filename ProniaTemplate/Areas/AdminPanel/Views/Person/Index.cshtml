@model List<Person>

@{
    int count = 1;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Person</h4>

                        <a asp-action="create"> <button type="button" class="btn btn-secondary">Create</button></a>

                        <div class="table-responsive pt-3">
                            <table class="table table-dark">
                                <thead>
                                    <tr>
                                        <th>
                                            #
                                        </th>
                                        <th>
                                            Image
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Surname
                                        </th>
                                        <th>
                                            Position
                                        </th>
                                        <th>
                                            Setting
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @(count++)
                                            </td>
                                            <td>
                                                <img src="~/upload/person/@item.Image" alt="">

                                            </td>
                                            <td>
                                                @item.Name
                                            </td>
                                            <td>
                                                @item.Surname
                                            </td>
                                            <td>
                                                @item.Name
                                            </td>
                                            <td>

                                                <a asp-controller="person" asp-action="update" asp-route-id="@item.Id" class="btn btn-warning"><i class="mdi mdi-pencil"></i> </a>
                                                <a asp-controller="person" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger btn-item-delete"><i class="mdi mdi-delete"></i></a>
                                                <a class="btn btn-primary"><i class="mdi mdi-open-in-new"></i></a>


                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- content-wrapper ends -->

</div>

